<Page x:Class="BrielinaFinanceiro.Inicio"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BrielinaFinanceiro"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Inicio">

    <Grid>

        <StackPanel>
            <Button Margin="155,360,495,0" Content="Registrar Gastos" Width="150" Height="30"/>
        </StackPanel>
        <DataGrid x:Name="DataGridInicio" Margin="450,30,30,30">
            
            <DataGrid.Columns>
                <DataGridTextColumn Header ="Tipo" Width="80" Binding="{Binding Tipo}"/>
                <DataGridTextColumn Header="Nome" Width="100" Binding="{Binding Nome}"/>
                <DataGridTextColumn Header="Valor da Media" Width="150" Binding="{Binding ValorDaMedia}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
